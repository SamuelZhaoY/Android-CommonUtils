<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@mipmap/ic_folder"
    android:padding="15dp"
    android:layout_width="@dimen/file_browser_dir_unit_size"
    android:layout_margin="15dp"
    android:layout_height="@dimen/file_browser_dir_unit_size">

    <TextView android:id="@+id/folder_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:gravity="left"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="11sp"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView android:id="@+id/folder_size"
        android:layout_marginTop="5dp"
        android:textSize="8sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"/>

</LinearLayout>